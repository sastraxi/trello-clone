{{ >header }}

  <h1>Create Monitor</h1>
  <h3>Logged in as {{ user.username }}</h3>
  <p>
    Watching a board will trigger syncs 
  </p>
  <form action="/monitor/new" method="post">

    <label for="boardId">Board to watch</label>
    <select name="boardId">
      {{ #boards }}
        <option value="{{ id }}">{{ name }}</option>
      {{ /boards }}
    </select>

    <label for="delaySeconds">Delay before triggering syncs (seconds)</label>
    <input name="delaySeconds" value="600" min="1" step="1" type="number" />

    <input type="submit" value="Start watching" />

  </form>

{{ >footer }}
